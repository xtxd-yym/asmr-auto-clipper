{
  "name": "asmr-clipper-desktop",
  "version": "1.0.0",
  "description": "ASMR Auto-Clipper Desktop App",
  "main": "dist-electron/main.js",
  "author": "xtxdy",
  "private": true,
  "scripts": {
    "dev": "npm run build:preload && npm run build:main && vite",
    "build": "tsc && vite build && electron-builder",
    "build:win": "npm run build -- --win",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --outfile=dist-electron/preload.js --external:electron",
    "build:main": "esbuild src/main/index.ts src/main/ai/processor.ts src/main/converter/format-converter.ts --bundle --platform=node --outdir=dist-electron --external:electron --external:puppeteer --external:fluent-ffmpeg --external:@ffmpeg-installer/ffmpeg --external:@ffprobe-installer/ffprobe",
    "start:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron dist-electron/index.js",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "lint": "eslint src --ext ts,tsx"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.2",
    "puppeteer": "^21.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.asmrclipper.app",
    "productName": "ASMR Clipper",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "dist-electron"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    }
  }
}